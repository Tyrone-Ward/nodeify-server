{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "@/*": ["/"],
            "@config/*": ["config/*"],
            "@utils/*": ["utils/*"],
            "@middleware/*": ["middleware/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
